{
  "env": "development",
  "server": {
    "host": "0.0.0.0",
    "port": 4000,
    "cors": {
      "origin": ["*"]
    }
  },
  "database": {
    "client": "better-sqlite3",
    "connection": {
      "filename": "./data/aura.db"
    }
  },
  "tickets": {
    "defaultMaxTurns": 50
  },
  "git": {
    "repoUrl": "https://github.com/your-org/your-infra-repo.git",
    "branch": "main",
    "workingDir": "./workspace",
    "authorName": "Aura Agent",
    "authorEmail": "aura@your-domain.com"
  },
  "logging": {
    "level": "info"
  },
  "llm": {
    "baseUrl": "https://api.openai.com/v1",
    "apiKey": "your-openai-api-key-here",
    "model": "gpt-4-turbo",
    "maxTokensPerTurn": 4096,
    "temperature": 0.1
  },
  "agent": {
    "planApprovalRequired": true,
    "destructiveActionApproval": true
  }
}
